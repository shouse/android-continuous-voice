<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.uniHamburg.informatik.continuousvoice"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- ### PERMISSIONS -->
    <!-- temporarily store audio records, store pocketsphinx files -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- needed to ensure audio can be recorded even though a bluetooth audio device is connected -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
	<!-- obviously -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- turn off beeping for built-in recognition -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <!-- send audio files to the recognizer web services -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.sonymobile.permission.SYSTEM_UI_VISIBILITY_EXTENSIONS" />
    <!-- PERMISSIONS ### -->
    
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.uniHamburg.informatik.continuousvoice.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <service
            android:name="de.uniHamburg.informatik.continuousvoice.services.sound.AudioService"
            android:label="Audio Service"
            android:process="de.uniHamburg.informatik.continuousvoice.processes.AudioService" >
        </service>

        <service
            android:name="de.uniHamburg.informatik.continuousvoice.services.recognition.pocketSphinx.PocketSphinxRecognitionService"
            android:label="PocketSphinx Voice Recognition"
            android:process="de.uniHamburg.informatik.continuousvoice.processes.PocketSphinxRecognitionProcess" >
        </service>
        <service
            android:name="de.uniHamburg.informatik.continuousvoice.services.recognition.builtIn.AndroidRecognitionService"
            android:label="Android Voice Recognition"
            android:process="de.uniHamburg.informatik.continuousvoice.processes.AndroidRecognitionService" >
        </service>
        <service
            android:name="de.uniHamburg.informatik.continuousvoice.services.recognition.webService.GoogleWebServiceRecognitionService"
            android:label="ABSTRACT Web Service Recognition Service"
            android:process="de.uniHamburg.informatik.continuousvoice.processes.webService.GoogleWebServiceRecognitionService" >
        </service>
    </application>

</manifest>