<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.uniHamburg.informatik.continousvoice"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.uniHamburg.informatik.continuousvoice.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="de.uniHamburg.informatik.continuousvoice.services.pocketSphinx.PocketSphinxRecognitionService"
            android:label="PocketSphinx Voice Recognition"
            android:process="de.uniHamburg.informatik.continuousvoice.processes.PocketSphinxRecognitionProcess" >
        </service>
        
        <service
            android:name="de.uniHamburg.informatik.continuousvoice.services.builtIn.AndroidRecognitionService"
            android:label="Android Voice Recognition"
            android:process="de.uniHamburg.informatik.continuousvoice.processes.AndroidRecognitionService" >
        </service>
    </application>

</manifest>