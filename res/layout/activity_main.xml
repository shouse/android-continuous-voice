<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:horizontalSpacing="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:verticalSpacing="@dimen/activity_vertical_margin"
    tools:context="de.uniHamburg.informatik.continuousvoice.MainActivity" >

    <!-- fragment containers -->
    <LinearLayout
        android:id="@+id/voiceRecognitionFragmentContainer1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.0" />

    <LinearLayout
        android:id="@+id/voiceRecognitionFragmentContainer2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.0" />
     
    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:onClick="startService"
        android:text="[TEST] Start Service" />
        

</LinearLayout>