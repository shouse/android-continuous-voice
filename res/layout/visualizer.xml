<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/visualizer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/main"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Switch
            android:id="@+id/audioServiceSwitch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="18dp"
            android:checked="false"
            android:text="AS"
            android:textSize="13sp"
            android:paddingRight="10dp" />
        
        <ImageView
            android:id="@+id/recordingIcon"
            android:layout_width="35dp"
            android:layout_height="28dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/recording" />
        
        <ImageView
            android:id="@+id/switchSpeakerIcon"
            android:layout_width="35dp"
            android:layout_height="28dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/switch_speaker" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView 
            android:text="L"
            android:textSize="13sp"
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:textColor="@color/foreground"/>
        
        <ImageView
            android:id="@+id/silenceStateLeft"
            android:layout_width="14dp"
            android:layout_height="18dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/mic_muted" />

        <ProgressBar
            android:id="@+id/soundlevelLeft"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="18dp"
            android:background="@color/main"
            android:paddingBottom="4dp"
            android:paddingTop="4dp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <TextView 
            android:text="R"
            android:textSize="13sp"
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:textColor="@color/foreground"/>

        <ImageView
            android:id="@+id/silenceStateRight"
            android:layout_width="14dp"
            android:layout_height="18dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/mic_muted" />

        <ProgressBar
            android:id="@+id/soundlevelRight"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="18dp"
            android:background="@color/main"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />
    </LinearLayout>

</LinearLayout>