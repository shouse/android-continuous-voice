<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    >
	<!-- HEADER BAR -->
    <LinearLayout
        android:layout_height="@dimen/header_bar_height"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/header_vertical_spacing"
        android:paddingRight="@dimen/header_vertical_spacing"
        android:baselineAligned="false" 
       	android:background="#cccccc"
       	>

    	<!-- left -->
    	<RelativeLayout
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:paddingRight="@dimen/activity_vertical_margin"
	    >
	    	<!-- Title -->

	    	<TextView
	    	    android:id="@+id/voiceRecognizerTitle"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="match_parent"
	    	    android:paddingLeft="0dp"
	    	    android:paddingRight="0dp"
	    	    android:gravity="center" />
	    	
	    	<!-- Time -->
	    	<TextView
	    	    android:id="@+id/voiceRecognizerTime"
	    	    android:layout_width="fill_parent"
	    	    android:layout_height="@dimen/header_bar_height_half"
	    	    android:paddingLeft="0dp"
	    	    android:paddingRight="0dp"
	    	    android:gravity="right|bottom"
	    	    android:textSize="@dimen/header_meta_text_size"
	    	    android:layout_toRightOf="@id/voiceRecognizerTitle"
	    	    />
	    	<!-- Words -->
	    	<TextView
	    	    android:id="@+id/voiceRecognizerWordCount"
	    	    android:layout_width="fill_parent"
	    	    android:layout_height="@dimen/header_bar_height_half"
	    	    android:paddingLeft="0dp"
	    	    android:paddingRight="0dp"
	    	    android:gravity="right|top"
	    	    android:textSize="@dimen/header_meta_text_size"
	    	    android:layout_toRightOf="@id/voiceRecognizerTitle"
	    	    android:layout_below="@id/voiceRecognizerTime"
	    	    />
	    </RelativeLayout>
	    
    	<!-- right -->
    	<LinearLayout
	        android:layout_width="@dimen/header_button_width_double"
	        android:layout_height="match_parent"
	        android:orientation="horizontal"
	        android:paddingLeft="0dp"
	    		android:gravity="right"
	    >
    		<!-- btn:play -->
    		<ImageButton
    		    android:id="@+id/voiceRecognizerBtnPlay"
    		    style="?android:attr/borderlessButtonStyle"
    		    android:layout_width="@dimen/header_button_width"
    		    android:layout_height="match_parent"
    		    android:gravity="right"
    		    android:src="@drawable/voice_play" />
    		<!-- btn:stop -->
    		<ImageButton
    		    android:id="@+id/voiceRecognizerBtnStop"
    		    style="?android:attr/borderlessButtonStyle"
    		    android:layout_width="@dimen/header_button_width"
    		    android:layout_height="match_parent"
    		    android:gravity="right"
    		    android:src="@drawable/voice_stop" />
    		<!-- btn:clear -->
    		<ImageButton
    		    android:id="@+id/voiceRecognizerBtnClear"
    		    style="?android:attr/borderlessButtonStyle"
    		    android:layout_width="@dimen/header_button_width"
    		    android:layout_height="match_parent"
    		    android:gravity="right"
    		    android:src="@drawable/voice_clear" />
    		<!-- btn:share -->
    		<ImageButton
    		    android:id="@+id/voiceRecognizerBtnShare"
    		    style="?android:attr/borderlessButtonStyle"
    		    android:layout_width="@dimen/header_button_width"
    		    android:layout_height="match_parent"
    		    android:gravity="right"
    		    android:src="@drawable/voice_share" />
    	</LinearLayout>
    </LinearLayout>
    
    <TextView
        android:id="@+id/voiceRecognizerContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:hint="Press ''play'' to activate\nAndroid Built-In Voice Recogniton"
     />

</LinearLayout>