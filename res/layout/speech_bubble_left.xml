<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/speechBubbleBg"
    android:layout_marginRight="@dimen/speech_bubble_margin"
    android:layout_marginBottom="@dimen/small_vertical_margin"
    >

    <ImageView
        android:id="@+id/speakerIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="0dp"
        android:src="@drawable/speaker" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/speakerIcon"
        android:layout_toRightOf="@id/speakerIcon"
        android:padding="5dp"
        android:hint="@string/noResults"
        android:gravity="left|top"
        android:textColor="@color/black" />

</RelativeLayout>